%h1 Segnala che vorresti che ti installassimo Linux
%h2 Linux Day 2013 - BGlug

%p Puoi segnalarci la tua intenzione di installare GNU/Linux sul tuo PC compilando il seguente modulo.

.forms
  :javascript
    $().ready(function() {
      // Valida form.
      $("#installa").validate({
        rules: {
          nome: "required",
          email: "required",
          captcha_answer: "required",
          nome: {
            required: true,
            minlength: 3
          },
          email: {
            required: true,
            email: true
          },
          accompagnati: "number",
          note: {
            maxlength: 300
          },
          captcha_answer: {
            minlength: 4,
            maxlength: 4
          }
        },
        messages: {
          name: "Inserisci il tuo nome e cognome, di almeno 3 lettere.",
          email: "Inserisci un indirizzo email valido.",
          note: "Le note non possono essere piÃ¹ lunghe di 300 caratteri."
        }
      });
      $('#note').keyup(function() {
        var max = 300;
        var len = $(this).val().length;
        if (len >= max) {
          $('#counter').text("Termine lettere a disposizione.");
        } else {
          var char = max - len;
          $('#counter').html(char + ' lettere rimanenti.');
        }
      });
    });
  %form#installa(action="/ld/2013/conferma" method="post")
    %table
      %tr
        %th
          %label(for="nome") Nome e Cognome <span class="required">*</span>
        %td
          %input(type='text' name='nome' autofocus="on" required)
      %tr
        %th
          %label(for='email') Email <span class="required">*</span>
        %td
          %input(type='email' name='email' required)
      %tr
        %th Che tipo di PC hai?
        %td
          %select(name="tipo")
            %option(value="Portatile" checked) Portatile
            %option(value="Fisso") Fisso
      %tr
        %th
          %label(for='cpu') Che CPU ha il tuo PC?
        %td
          %input(type='text' name='cpu' placeholder='es. Intel Atom 450')
      %tr
        %th
          %label(for='ram') Quanta RAM ha il tuo PC?
        %td
          %input(type='text' name='ram' placeholder='es. 1 GB')
      %tr
        %th
          %label(for='ram') Che versione di Ubuntu preferisci?
        %td
          %select(name="flavor")
            %option(value="Ubuntu") Ubuntu
            %option(value="Kubuntu") Kubuntu
            %option(value="Xubuntu") Xubuntu
            %option(value="Lubuntu") Lubuntu
            %option(value="-" selected) Non so/mi faccio consigliare da voi
      %tr
        %th
          %label(for='note') Note
        %td
          %textarea#note(name="note" rows="6" cols="40" maxlength="300")
          %br
          %p#counter 300 lettere rimanenti.
      = haml 'ld/2013/captcha'.to_sym
    .buttons
      %input(type='hidden' name='azione' value='installa')
      %input(type="submit" name="submit" value="Conferma")
      %input(type="reset" name="cancel" value="Cancella modulo")
